            <input type="text" id="pseudo" name="pseudo">
            {{ pseudo }}
            <label for="password">Mot de passe</label><br>
            <input type="password" id="password" name="password"><br>
            {{password}}
            <input type="submit" value="Inscription" id="submit" name="submit">
        </form>
