{% if errors['pseudo'] is defined %}
    {% set pseudo=errors['pseudo'] %}
{% else %}
    {% set pseudo='' %}
{% endif %}

{% if errors['password'] is defined %}
    {% set password=errors['password'] %}
{% else %}
    {% set password='' %}
{% endif %}


